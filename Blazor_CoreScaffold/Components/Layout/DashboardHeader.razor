<div class="dashboard-page__header">
    <div class="dashboard-page__header-text">
        <MudText Typo="Typo.h3" Class="dashboard-page__title">@Title</MudText>
        @if (!string.IsNullOrWhiteSpace(Subtitle))
        {
            <MudText Typo="Typo.body2" Class="dashboard-page__subtitle">@Subtitle</MudText>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(StatusText))
    {
        <div class="dashboard-page__status dashboard-page__status--@AppearanceClass">
            <span class="dashboard-page__status-dot"></span>
            <MudText Typo="Typo.body2" Class="dashboard-page__status-text">@StatusText</MudText>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Subtitle { get; set; } = string.Empty;

    [Parameter]
    public string StatusText { get; set; } = string.Empty;

    [Parameter]
    public string StatusAppearance { get; set; } = "success";

    private string AppearanceClass => DashboardHeaderAppearance.Normalize(StatusAppearance);
}
