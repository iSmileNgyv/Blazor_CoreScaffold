            </div>
        </div>

        @* Navigation Links *@
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Primary" Class="active-nav-item">Dashboard</MudNavLink>
        <MudNavLink Href="/services" Icon="@Icons.Material.Filled.ToggleOn">Services</MudNavLink> @* Assuming '/services' is the path *@
        <MudNavLink Href="/logs" Icon="@Icons.Material.Filled.History">Logs</MudNavLink> @* Assuming '/logs' is the path *@
        <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">Settings</MudNavLink> @* Assuming '/settings' is the path *@
    </MudNavMenu>

    @* Logout Section *@
    <MudNavMenu Rounded="true" Class="mud-navmenu-custom">
        <MudNavLink Href="/logout" Icon="@Icons.Material.Filled.Logout">Logout</MudNavLink> @* Assuming '/logout' is the path *@
    </MudNavMenu>

</MudPaper>

@* Optional: Custom CSS for NavMenu styling *@
<style>
    .mud-drawer-custom {
        background-color: inherit !important; /* Make paper transparent to show drawer bg */
    }

    .mud-navmenu-custom .mud-nav-link {
        color: var(--mud-palette-text-secondary);
    }
    .mud-navmenu-custom .mud-nav-link.active:not(.active-nav-item) { /* Avoid overriding specific active style */
        color: var(--mud-palette-primary);
        background-color: var(--mud-palette-action-default-hover); /* Light background for active */
    }
    .mud-navmenu-custom .mud-nav-link:hover {
        background-color: var(--mud-palette-action-default-hover);
    }

    /* Specific style for the dashboard active item */
    .mud-navmenu-custom .active-nav-item.active {
        color: var(--mud-palette-primary);
        background-color: var(--mud-palette-primary-lighten); /* Use a light primary color */
    }
    .mud-navmenu-custom .active-nav-item.active .mud-icon-root {
        color: var(--mud-palette-primary); /* Ensure icon color matches text */
    }

    /* User info avatar adjustments if needed */
    .mud-avatar img {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }
</style>
