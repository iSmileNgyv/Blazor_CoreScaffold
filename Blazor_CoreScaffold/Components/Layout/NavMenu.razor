    <div class="side-nav__logout">
        <MudNavLink Href="/logout"
                    Icon="@Icons.Material.Outlined.Logout"
                    Class="side-nav__link side-nav__link--logout"
                    ActiveClass="side-nav__link--active">
            Logout
        </MudNavLink>
