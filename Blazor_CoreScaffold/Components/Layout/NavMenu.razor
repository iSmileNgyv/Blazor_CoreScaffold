                    Icon="@Icons.Material.Outlined.Settings"
                    Class="side-nav__link"
                    ActiveClass="side-nav__link--active">
            Settings
        </MudNavLink>
        <MudNavLink Href="/translations"
                    Icon="@Icons.Material.Outlined.Translate"
                    Class="side-nav__link"
                    ActiveClass="side-nav__link--active">
