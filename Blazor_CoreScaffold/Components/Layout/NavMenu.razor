            <MudText Typo="Typo.subtitle1" Class="side-nav__title">Core Project</MudText>
            <MudText Typo="Typo.caption" Class="side-nav__subtitle">Operations Console</MudText>
        </div>
    </div>

    <MudNavMenu Class="side-nav__menu">
        <MudNavLink Href="/"
                    Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Dashboard"
                    Class="side-nav__link"
                    ActiveClass="side-nav__link--active">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/users"
                    Icon="@Icons.Material.Outlined.Group"
                    Class="side-nav__link"
                    ActiveClass="side-nav__link--active">
            User Management
