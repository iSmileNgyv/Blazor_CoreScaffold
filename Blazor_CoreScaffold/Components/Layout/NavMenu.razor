@using MudBlazor

<aside class="app-sidebar">
    <div class="app-sidebar__brand">
        <MudIcon Icon="@Icons.Material.Outlined.Hub"
                 Size="Size.Large"
                 Class="app-sidebar__brand-icon" />
        <span class="app-sidebar__brand-text">Core Project</span>
    </div>

    <MudNavMenu Class="app-sidebar__menu">
        <MudNavLink Href="/"
                    Match="NavLinkMatch.All"
                    Icon="@Icons.Material.Outlined.Dashboard"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/users"
                    Icon="@Icons.Material.Outlined.Group"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            User Management
        </MudNavLink>
        <MudNavLink Href="/roles"
                    Icon="@Icons.Material.Outlined.ManageAccounts"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            Role Management
        </MudNavLink>
        <MudNavLink Href="/logs"
                    Icon="@Icons.Material.Outlined.History"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            System Logs
        </MudNavLink>
        <MudNavLink Href="/health"
                    Icon="@Icons.Material.Outlined.HealthAndSafety"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            Health Check
        </MudNavLink>
        <MudNavLink Href="/settings"
                    Icon="@Icons.Material.Outlined.Settings"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            Settings
        </MudNavLink>
        <MudNavLink Href="/translations"
                    Icon="@Icons.Material.Outlined.Translate"
                    Class="app-sidebar__link"
                    ActiveClass="app-sidebar__link--active">
            Translation Management
        </MudNavLink>
    </MudNavMenu>

    <div class="app-sidebar__footer">
        <MudNavLink Href="/logout"
                    Icon="@Icons.Material.Outlined.Logout"
                    Class="app-sidebar__link app-sidebar__logout"
                    ActiveClass="app-sidebar__link--active">
            Logout
        </MudNavLink>
    </div>
</aside>
