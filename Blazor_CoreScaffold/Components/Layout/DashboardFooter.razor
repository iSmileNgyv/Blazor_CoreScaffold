@using MudBlazor

<footer class="core-footer">
    <MudText Typo="Typo.caption" Class="core-footer__copy">@FooterText</MudText>

    @if (RightContent is not null)
    {
        <div class="core-footer__links">
            @RightContent
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(SecondaryText))
    {
        <MudText Typo="Typo.caption" Class="core-footer__secondary">@SecondaryText</MudText>
    }
</footer>

@code {
    [Parameter]
    public string FooterText { get; set; } = $"Â© {DateTime.Now.Year} Core Project. All rights reserved.";

    [Parameter]
    public string SecondaryText { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment? RightContent { get; set; }
}
